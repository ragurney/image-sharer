<h1>New Image URL</h1>

<div class="row">
  <div class="col-xs-6">
    <%= simple_form_for @image do |f| %>
      <%= f.error_notification  %>

      <%= f.input :url, label: 'Enter URL', input_html: { placeholder: 'Enter Image URL'} %>
      <%= f.button :submit, 'Upload Image', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
